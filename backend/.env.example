# Environment Variables Template
# Copy this file to .env and fill in your values

# Database - PostgreSQL with Prisma Accelerate
DATABASE_URL=prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# AI Integration (Optional)
# Get your API key from https://aistudio.google.com
GEMINI_API_KEY=

# GitHub OAuth (Optional - for GitHub integration)
# Create a GitHub OAuth App at: https://github.com/settings/developers
# Set Authorization callback URL to: http://localhost:3000/api/github/callback
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:3000/api/github/callback

# Email Configuration (Required for password reset emails)
# For Gmail: Use an App Password - https://myaccount.google.com/apppasswords
# For other SMTP providers: Use your provider's SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=CodeReview.ai <noreply@codereview.ai>
